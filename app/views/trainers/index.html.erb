<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/treners.css">

<section id="team" class="pb-5">
  <div class="container">
    <h5 class="section-title h1">TRENERZY</h5>
    <div class="row">
      <% @trainers.each do |trainer| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
            <div class="mainflip">
              <div class="frontside">
                <div class="card">
                  <div class="card-body text-center">
                    <p><img class=" img-fluid" src="https://fileserver.calypso.com.pl/ins__1220_2017_11_29_16_49_03_798.jpeg" alt="card image"></p>
                    <h4 class="card-title"><%= trainer.full_name %></h4>
                    <p class="card-text"> INSTRUKTOR KULTURYSTYKI</p>
                    <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                  </div>
                </div>
              </div>
              <div class="backside">
                <div class="card">
                  <div class="card-body text-center mt-4">
                    <p><img src=" https://www.fitnessfirst.com.sg/globalassets/fitness-first-sg-shared-blocks/all-classes-logo/strength-conditioning/sculpt-stretch.jpg"></p>
                    <p class="card-text">Monday: 18.00 - 19:00 <br />
                        Wednesday: 17.00 - 18:00 </p>
                        <p><img src=" https://www.fitnessfirst.com.sg/globalassets/fitness-first-sg-shared-blocks/all-classes-logo/strength-conditioning/bodypump.jpg"></p>
                    <ul class="list-inline">
                      <p class="card-text">Wednesday: 19.00 - 20:00 <br /></p>
                      <button type="submit" class="btn fitness-btn btn-white mt-50">Sign up!</button>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
