<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Edycja produktu <%= @product.name %>
    </h1>
    <ol class="breadcrumb">
      <li><%= link_to dashboards_path do %><i class="fa fa-circle-o"></i> Dashboard <% end %></li>
      <li><%= link_to products_dashboards_path do %><i class="fa fa-circle-o"></i> Produkty <% end %></li>
      <li class="active">Edycja produktu</li>
    </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-6">
        <div class="box box-primary">
          <%= form_for @product, url: update_product_dashboards_path(id: params[:id]), method: :put do |f| %>
          <div class="box-body">
            <div class="form-group">
              <%= f.label :name, "Nazwa produktu" %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <%= f.label :price, "Cena produktu" %>
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <%= f.text_field :price, class: 'form-control' %>
              <span class="input-group-addon">.00</span>
            </div>
            <div class="form-group">
              <%= f.label :description, "Opis produktu" %>
              <%= f.text_field :description, escape_html: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :days, "Dni waznosci produktu" %>
              <%= f.text_field :days, class: 'form-control' %>
            </div>
            <div class="box-footer">
              <%= f.submit "Aktualizuj produkt", class: 'btn btn-primary' %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
