  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Tworzenie produktu
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
          
            <!-- /.box-header -->
            <!-- form start -->
            <%= form_for @product, url: create_product_dashboards_path, method: :post do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <%= f.label :name, "Nazwa produktu" %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
                <%= f.label :price, "Cena produktu" %>
                <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= f.text_field :price, class: 'form-control' %>
                  <span class="input-group-addon">.00</span>
                </div>
                <div class="form-group">
                  <%= f.label :description, "Opis produktu" %>
                  <%= f.text_field :description, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :days, "Dni waznosci produktu" %>
                  <%= f.text_field :days, class: 'form-control' %>
                </div>
              <div class="box-footer">
                <%= f.submit "Dodaj produkt", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
          <!-- /.box -->


              </form>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
